@model IEnumerable<TSP_PROJECT.Models.Batch>

@{
    ViewData["Title"] = "Index";
}

<h3 class="alert alert-primary">Attendance</h3>

<div class="row">
    <div class="col-md-4">
        @* <p>
            <a asp-action="Create" class="btn btn-primary btn-sm">Create New</a>
        </p> *@
    </div>
    <div class="col-md-8">
        <form asp-controller="Attendances" asp-action="AttendanceSheet" method="get">
            <div class="input-group">
                <span class="input-group-text"> Course Batch </span>
                <select class="form-control" name="batchid" >
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <option value="@item.Id">@item.BatchName</option>
                        }
                    }
                </select>
                <button type="submit" class="btn btn-primary btn-sm"> Show Class Schedule</button>
            </div>
            @* <a asp-action="CreateAttendanceSheet" class="btn btn-primary btn-sm">Create Attendance Sheet</a> *@
        </form>
    </div>
</div>

